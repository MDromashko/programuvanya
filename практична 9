#include <stdio.h> // Підключення бібліотеки

int function(int x, int y) // Функція для обчислення кількості кроків
{
   if (x == y) // Якщо x дорівнює y,
   {
      return 0; // Повертаємо 0 (кількість кроків)
   }

   int a = 1, b = y - x; // Ініціалізація змінних a та b

   while (b > a) // Поки b > a,
   {
      if (b <= 2 * a) // Якщо b <= 2 * a,
      {
         b = 0; // Присвоюємо b значення 0
      }
      a++; // Збільшуємо a на 1
   }

   return a; // Повертаємо значення a (кількість кроків)
}

int main()
{
   int x, y; // Оголошення змінних x та y

   printf("Enter x: "); // Виведення повідомлення для введення x
   scanf("%d", &x); // Зчитування значення x

   printf("Enter y: "); // Виведення повідомлення для введення y
   scanf("%d", &y); // Зчитування значення y

   printf("\nResult: %d", function(x, y)); // Виведення результату обчислення функції

   return 0; // Завершення програми зі статусом успішного виконання
}
