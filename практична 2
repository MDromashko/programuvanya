#include <stdio.h> // підключаємо бібліотеку

// створюємо функцію для знаходження найбільшого спільного дільника
int function1(int a, int b) {
    if (b == 0)
        return a;
    return function1(b, a % b);
}

// створюємо функцію для знаходження найменшого спільного кратного
int function2(int a, int b) {
    return (a * b) / function1(a, b);
}

int main() {
    int n; // оголошуємо змінну
    printf("Введіть кількість чисел: "); // виводимо на екран де просимо ввести кількість чисел
    scanf("%d", &n); // скануємо введені дані

    int numbers[20]; // оголошуємо масив
    printf("Введіть %d чисел, розділених пробілом: ", n); // виводимо на екран де просимо ввести числа, розділені пробілом
    for (int i = 0; i < n; i++) { 
        scanf("%d", &numbers[i]);
    } // створємо цикл де скануємо дані з масиву

    int result = numbers[0]; // оголшуємо зміну і присвоюємо їй значення numbers
    for (int i = 1; i < n; i++) {
        result = function2(result, numbers[i]);
    } // створємо цикл де знаходимо найменше спільне кратне

    printf("Найменше спільне кратне: %d\n", result); // виводимо результат

    return 0; // повертаємо значення 0
}
