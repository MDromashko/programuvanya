#include <stdio.h> // підключаємо бібліотеку 

int main() {
    int number1, number2, number3; 
    float timeForEatCake; // оголошуємо змінні

    printf("*Значення вводяться через пробіл*\n\n"); // виводимо на екран пояснення щодо вводу даних
    
    printf("Введіть три значення (час з'їдання пирога 3 гостями):\n"); // виводимо на екран прохання ввести час з'їдання пирога 3 гостями
    scanf("%d %d %d", &number1, &number2, &number3); // скануємо введені дані
    
    timeForEatCake = 1.0 / ((1.0 / number1) + (1.0 / number2) + (1.0 / number3)); // рохраховуємо час, необхідний для з'їдання пирога

    printf("\nЧас, необхідний для з'їдання пирога: %.2f годин(и)\n", timeForEatCake); // виводимо результат

    return 0; // повертаємо значення 0
}
